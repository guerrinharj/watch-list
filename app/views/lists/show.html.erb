<h1> <%= @list.name %> </h2>

<ul>
  <% @list.bookmarks.each do |bookmark|%>
  <li>
  <% @movies.each do |movie| %>
  <% if bookmark.movie_id == movie.id  %>
  <%= image_tag movie.poster_url %>
    <h2> <%= movie.title %> </h2>
    <h3> <%= movie.overview %> </h3>
  <% end %>
  <% end %>
    <%= link_to "delete",
            bookmark_path(bookmark[:id]),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>

<h3> <%= link_to "Add new bookmark", new_list_bookmark_path(@list[:id]) %>
<h3> <%= link_to 'Back', lists_path %> </h3>
